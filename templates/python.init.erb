#!upstart
description "python simulator"
author      "Marvin Arroz"

start on startup
stop on shutdown

script
    chdir /opt/adcade/simad/
    exec sudo /usr/bin/python controller.py simple.conf >> /var/log/simulator.log 
end script

pre-start script
    # Date format same as (new Date()).toISOString() for consistency
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/simulator.log
end script
