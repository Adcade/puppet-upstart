#!upstart
description "node worker"
author      "elbuo8 (Yamil Asusta)"

start on startup
stop on shutdown

script
    export HOME="/root"

    echo $$ > /var/run/adworker.pid
    chdir /opt/adcade/newadworker/
    exec sudo -u root /usr/bin/node adworkerRunner.js >> /var/log/adworker.sys.log 2>&1
end script

pre-start script
    # Date format same as (new Date()).toISOString() for consistency
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/adworker.sys.log
end script

pre-stop script
    rm /var/run/adworker.pid
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping" >> /var/log/adworker.sys.log
end script
