#!upstart
description "node worker"
author      "elbuo8 (Yamil Asusta)"

start on startup
stop on shutdown

script
    export HOME="/root"

    echo $$ > /var/run/adoworker.pid
    exec cd /opt/adcade/deploy/node && npm install && cd 
    exec sudo -u root /usr/local/bin/node /opt/adcade/deploy/node/adworkerRunner.js >> /var/log/adoworker.sys.log 2>&1
end script

pre-start script
    # Date format same as (new Date()).toISOString() for consistency
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/adoworker.sys.log
end script

pre-stop script
    rm /var/run/adoworker.pid
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping" >> /var/log/adoworker.sys.log
end script